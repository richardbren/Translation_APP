<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".MainActivity">
    <ImageView
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/imageView"
        android:src="@drawable/german" />
    <TextView
        android:id="@+id/translationTextView"
        android:text="Enter an English word into the text box below for a German translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:id="@+id/button"
        android:onClick="onTranslateClick"
        android:layout_below="@+id/translationTextView"
        android:layout_marginTop="30dp"
         />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/editText"
    android:singleLine="true"
    android:layout_below="@+id/button"
    android:layout_marginTop="30dp"
    android:hint="Enter word here and press Translate" />
    <!-- android:imeOptions="actionDone" -->
</RelativeLayout>
